<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sistema Hospitalar</title>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/home.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
  <link rel="stylesheet" href="/css/sidebar.css">
  <link rel="stylesheet" href="/css/list.css">
  <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>

</head>

<body>
  <nav class="sidebar close">
    <header>
      <div class="image-text">
        <span class="image">
          <img src="/imgs/logo.png" alt="">
        </span>

        <div class="text logo-text">
          <span class="name">
            <%= user?.username %>
          </span>
          <span class="profession">
            <%= user?.cargo %>
          </span>
        </div>
      </div>

      <i class='bx bx-chevron-right toggle'></i>
    </header>

    <div class="menu-bar">
      <div class="menu">

        <ul class="menu-links">
          <li class="nav-link">
            <a href="#">
              <i class='bx bx-home-alt icon'></i>
              <span class="text nav-text">Dashboard</span>
            </a>
          </li>

         
          <li class="nav-link">
            <a href="/consultas">
              <i class='bx bx-injection icon'></i>
              <span class="text nav-text">Consultas</span>
            </a>
          </li>

        </ul>
      </div>

      <div class="bottom-content">
        <li class="">
          <a href="/logout">
            <i class='bx bx-log-out icon'></i>
            <span class="text nav-text">Logout</span>
          </a>
        </li>

      </div>
    </div>

  </nav>

  <section class="home">
    <div class="text">Sistema Unifil de Saúde</div>

    <div class="wrapper">
      <h1>Próximas consultas</h1>
      <% if (consultas && consultas.length> 0) { %>
        <ol class="album-list" start="1">
          <% for (const consulta of consultas) { %>
            <li class="album-list-item">
              <span class="album-info">
                <!-- Displaying only the date (day, month, year) -->
                <%= consultas[1].paciente.dataValues.username + ' - ' +
                  consulta.dataAgendada.toLocaleDateString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %>

              </span>
              <span class="album-info">
                <!-- Displaying only the time -->
                <%= consulta.dataAgendada.toLocaleTimeString('pt-BR', { timeZone: 'America/Sao_Paulo' }) %>
              </span>
            </li>
            <% } %>
        </ol>
        <% } else { %>
          <p>Você não tem nenhuma consulta agendada.</p>
          <% } %>
    </div>




  </section>

  <script>
    const body = document.querySelector('body'),
      sidebar = body.querySelector('nav'),
      toggle = body.querySelector(".toggle")
    toggle.addEventListener("click", () => {
      sidebar.classList.toggle("close");
    })

  </script>
</body>

</html>